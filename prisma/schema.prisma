// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  sessions      Session[]
  tasks         Task[]
  projects      Project[]
  skills        Skill[]
  settings      UserSettings?

  @@map("users")
}

model UserSettings {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Timer settings
  workDuration          Int      @default(25)      // minutes
  shortBreakDuration     Int      @default(5)       // minutes
  longBreakDuration      Int      @default(15)      // minutes
  longBreakInterval     Int      @default(4)       // sessions
  
  // Focus mode settings
  focusModeEnabled      Boolean  @default(false)
  blockedSites          String[]  @default([])
  strictMode            Boolean  @default(false)
  showMotivationalQuotes Boolean  @default(true)
  
  // Audio settings
  audioEnabled          Boolean   @default(false)
  selectedAmbientSound   String?
  volume               Int        @default(50)
  fadeInOut            Boolean    @default(true)
  notificationSound     String      @default("bell")
  notificationVolume    Int         @default(70)
  
  // Theme settings
  theme                String     @default("system") // light, dark, system
  
  // Notification settings
  desktopNotifications  Boolean    @default(true)
  sessionReminders      Boolean     @default(true)
  
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt

  @@map("user_settings")
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#3b82f6")
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  tasks       Task[]

  @@map("projects")
}

model Task {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  description String?

  /// Task priority (LOW/MEDIUM/HIGH)
  priority    Priority @default(MEDIUM)

  /// Estimated number of Pomodoro sessions for this task
  estimatedPomodoros Int    @default(1) @map("estimate_pomodoros")

  /// Actual number of completed Pomodoro sessions for this task
  actualPomodoros    Int    @default(0) @map("actual_pomodoros")

  /// Total focused work time spent on this task in milliseconds
  timeSpentMs        Int    @default(0) @map("time_spent")

  /// Current status of the task in the workflow
  status     TaskStatus @default(PENDING)

  /// Optional tags for grouping and filtering
  tags       String[]   @default([])

  /// Optional category / project grouping (kept for backwards compatibility)
  category   String?

  /// Optional relation to a project
  projectId  String?
  project    Project?   @relation(fields: [projectId], references: [id], onDelete: SetNull)

  /// Soft delete flag â€“ when true, task is hidden from normal queries
  isDeleted  Boolean    @default(false) @map("is_deleted")

  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt      @map("updated_at")
  completedAt DateTime?

  // Relations
  sessions   Session[]

  @@map("tasks")
}

model Session {
  id          String    @id @default(cuid())
  duration    Int       // seconds
  type        SessionType @default(WORK)
  startTime   DateTime
  endTime     DateTime?
  taskId      String?
  task        Task?     @relation(fields: [taskId], references: [id], onDelete: SetNull)
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@map("sessions")
}

model Skill {
  id           String   @id @default(cuid())
  name         String
  targetHours  Int      @default(10000)
  currentHours Float    @default(0)
  color        String   @default("#3b82f6")
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  achievements Achievement[]

  @@map("skills")
}

model Achievement {
  id          String   @id @default(cuid())
  title       String
  description String
  icon        String?
  unlockedAt  DateTime @default(now())
  skillId     String?
  skill       Skill?   @relation(fields: [skillId], references: [id], onDelete: SetNull)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("achievements")
}

model Streak {
  id          String   @id @default(cuid())
  current     Int      @default(0)
  longest     Int      @default(0)
  lastSession DateTime?
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("streaks")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

enum SessionType {
  WORK
  SHORT_BREAK
  LONG_BREAK
}